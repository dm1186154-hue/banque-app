// main.js ‚Äî Banque Facile üí∏

// Importation de Firebase
import { auth } from "./firebase.js";
import {
  signInWithEmailAndPassword,
  onAuthStateChanged,
  signOut
} from "https://www.gstatic.com/firebasejs/10.14.0/firebase-auth.js";

// S√©lection des √©l√©ments HTML (si pr√©sents)
const loginForm = document.getElementById("login-form");
const logoutBtn = document.getElementById("logout-btn");

// üîê Connexion utilisateur
if (loginForm) {
  loginForm.addEventListener("submit", (e) => {
    e.preventDefault();

    const email = document.getElementById("login-email").value;
    const password = document.getElementById("login-password").value;

    signInWithEmailAndPassword(auth, email, password)
      .then((userCredential) => {
        const user = userCredential.user;

        // Stocker le nom de l'utilisateur localement
        localStorage.setItem("nomUtilisateur", user.displayName || "Utilisateur");

        alert("‚úÖ Connexion r√©ussie !");
        window.location.href = "tableau_de_bord.html";
      })
      .catch((error) => {
        alert("‚ùå Erreur de connexion : " + error.message);
      });
  });
}

// üëÅÔ∏è V√©rification de la session utilisateur
onAuthStateChanged(auth, (user) => {
  if (user) {
    console.log("Utilisateur connect√© :", user.displayName);
    localStorage.setItem("nomUtilisateur", user.displayName || "Utilisateur");
  } else {
    console.log("Aucun utilisateur connect√©.");
  }
});

// üö™ D√©connexion
if (logoutBtn) {
  logoutBtn.addEventListener("click", () => {
    signOut(auth)
      .then(() => {
        localStorage.removeItem("nomUtilisateur");
        alert("D√©connexion r√©ussie üëã");
        window.location.href = "connexion.html";
      })
      .catch((error) => {
        alert("Erreur lors de la d√©connexion : " + error.message);
      });
  });
}
