// Afficher le nom de l'utilisateur
const nom = localStorage.getItem("nomUtilisateur");
document.getElementById("user-name").textContent = nom ? nom : "Utilisateur";

// Simulation dâ€™un solde de dÃ©part
let balance = 25000;
const balanceEl = document.getElementById("balance");
balanceEl.textContent = balance.toLocaleString("fr-FR") + " FCFA";

// ðŸ’° DÃ©pÃ´t
document.getElementById("add-money").addEventListener("click", () => {
  const montant = prompt("Entrez le montant Ã  dÃ©poser (FCFA) :");
  if (montant && !isNaN(montant)) {
    balance += Number(montant);
    balanceEl.textContent = balance.toLocaleString("fr-FR") + " FCFA";
    alert("âœ… DÃ©pÃ´t rÃ©ussi !");
  }
});

// ðŸ’¸ Transfert
document.getElementById("transfer-money").addEventListener("click", () => {
  const destinataire = prompt("NumÃ©ro du destinataire (+225...) :");
  const montant = prompt("Montant Ã  transfÃ©rer (FCFA) :");
  if (destinataire && montant && !isNaN(montant)) {
    if (balance >= montant) {
      balance -= Number(montant);
      balanceEl.textContent = balance.toLocaleString("fr-FR") + " FCFA";
      alert(`ðŸ’¸ Transfert de ${montant} FCFA Ã  ${destinataire} rÃ©ussi !`);
    } else {
      alert("âŒ Solde insuffisant !");
    }
  }
});

// ðŸšª DÃ©connexion
document.getElementById("logout").addEventListener("click", () => {
